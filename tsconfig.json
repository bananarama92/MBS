{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["ESNext", "dom"],
        "types": [],
        "module": "ESNext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "removeComments": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "node_modules/bc-stubs/bc/**/*.d.ts",
        "./src/**/*",
        "./api/**/*",
        "rollup.config.mjs"
    ]
}
